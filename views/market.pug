extends layout
block append head
    script(type='text/javascript', src='js/market.js')
block content
    div(class="header")
        nav(class="navbar navbar-expand-lg navbar-dark bg-custom")
            a(class="navbar-brand" href="/")
        
                img(src="/img/icon.PNG" class="logo")
                span(style='padding-left:10px') Transpay PMS
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon" )
            div(class="collapse navbar-collapse" id="nav-content")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                        a(class="nav-link" href="#") 
                            span(class="fa fa-object-group") 
                            span  Market Place
                    li(class="nav-item")
                        a(class="nav-link a-make-purchase collapse-navbar" href="#")

                            span(class="fa fa-bitcoin")
                            span  Buy Eggs
                    li(class="nav-item")
                        a(class="nav-link my-orders collapse-navbar" href="#")

                            span(class="fa fa-outdent")
                            span  My Orders
                    li(class="nav-item dropdown hd" id="my-groups-li")
                        a(class="nav-link dropdown-toggle a-my-groups" href="#" id="a-my-groups" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")

                            span(class="fa fa-modx")
                            span  My Groups
                        div(class="dropdown-menu" aria-labelledby="a-my-groups" id="my-groups-div")
                    li(class="nav-item hd" id="li-admin")
                        a(class="nav-link" href="/admin")

                            span(class="fa fa-linux")
                            span  Admin Portal
                ul(class="navbar-nav ml-auto")
                    li(class="nav-item dropdown user-li hd")
                        a(class="nav-link dropdown-toggle" href="#" id="a-user-options" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                            span(class="fa fa-user")
                            span(id="my-name")
                        div(class="dropdown-menu" aria-labelledby="a-user-options" id="user-options")
                            a(href="#" class="dropdown-item") <i class='fa fa-user-o'></i> Profile
                            a(href="#" class="dropdown-item confirm-axn" axn='signout') <i class='fa fa-sign-out'></i> Signout

                           

    div(class="container")
        p
       
        div(id="instock-div" class="cd" style="max-width:900px;margin:0px auto")
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white") Buy Eggs

                div(class="card-body")

                    form
                        div(class="form-group row")
                            label(class="col-md-2 col-form-label") Price per Tray
                            div(class="col-md-4")
                                input(type="text" readonly id="price-per-tray" class="form-control")
                            label(class="col-md-2 col-form-label") Quantity (Trays)
                            div(class="col-md-4")
                                input(maxlength="4" type="number" class="form-control" id="qty" placeholder="Quantity" onkeyup="compute_tcost(this)")
                        div(class="form-group row")
                                label(class="col-md-2 col-form-label") Total Cost
                                div(class="col-md-4")
                                    input(class="form-control" id="total" readonly)
                                label(class="col-md-2 col-form-label") Payment Option
                                div(class="col-md-4")
                                    select(class="form-control" id="pay-method" readonly)
                                        option(value="0") Payment Option
                                        option(value="transpay") Transpay
                                        option(value='mobile-money') Mobile Money
                        div(class="form-group row")
                                label(class="col-md-2 col-form-label mm-po po hd") Phone Number
                                div(class="col-md-4 mm-po po hd")
                                    input(type="text" class="form-control" id="mm-phone")
                                label(class="col-md-2 col-form-label tp-po po hd") Transpay ID
                                div(class="col-md-4 tp-po po hd")
                                    input(type="text" class="form-control" id="transpay-id")
                                label(class="col-md-2 col-form-label mp-label")
                                div(class="col-md-10 mp-div")

                                    button(class="btn btn-primary form-control" id="purchase-btn" type="button") Complete Purchase
        div(id="orders-div" class="cd hd")
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white") Orders
                div(class="card-body")
                    div(class="table-responsive")
                        table(id="orders-table" class="table table-striped")
                    p(class="alert alert-info hd" id="no-orders") You haven't made any orders yet
                
        div(class="modal fade" tabindex="-1" aria-labelledby="confirm-payment-div" aria-hidden="true" id="confirm-payment-div" data-backdrop="static")
            div(class="modal-dialog")
                div(class="modal-content")
                    div(class="modal-body")
                        h4 Confirm Payment

                        div(class="row")
                            span(class='col-sm-4 bld') Quantity
                           
                            span(class="col-sm-8" id="confirm-qty")
                        hr
                        div(class="row")
                            span(class='col-sm-4 bld') Price
                          
                            span(class="col-sm-8" id="confirm-price")
                        hr
                        div(class="row")
                            span(class='col-sm-4 bld') Total Cost
                           
                            span(class='col-sm-8' id="confirm-total-cost")
                        hr
                        div(class="row")
                            span(class='col-sm-4 bld') Payment Method
                           
                            span(class='col-sm-8' id="confirm-pay-method")
                        div
                            hr
                            div(class="row" id="phone-op")
                                span(class='col-sm-4 bld') Phone Number
                                
                                span(class='col-sm-8' id="confirm-phone")
                            
                            div(class="row" id="transpay-id-op")
                                spanc(class='col-sm-4 bld') Transpay ID
                                
                                span(class='col-sm-8' id="confirm-transpay-id")
                        
                       
                    div(class="modal-footer")
                        button(class="btn btn-primary" id="confirm-payment-btn") Yep

                        button(class="btn btn-secondary" data-dismiss="modal") No
                        
        
        


        