            div(class="modal-dialog modal-lg modal-dialog-scrollable")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title" id="create-group-hdr") Create a Group
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div(class="modal-body")
                        form
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label") Group Name
                                div(class="col-sm-9")
                                    input(type="text" class="form-control" id="group-name" placeholder="Group name")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label") District
                                div(class="col-sm-9")
                                    select(class="form-control" id="district" onchange="district_changed(this,0)")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label") County
                                div(class="col-sm-9")
                                    select(class="form-control" id="county" onchange="county_changed(this,0)")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label" ) Subcounty
                                div(class="col-sm-9")
                                    select(class="form-control" id="subcounty" onchange="subcounty_changed(this,0)")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label" ) Parish
                                div(class="col-sm-9")
                                    select(class="form-control" id="parish")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label" type="text") Village
                                div(class="col-sm-9")
                                    input(class="form-control" id="village" type="text")
                            div(class="form-group row")
                                label(class="col-sm-3 col-form-label") Meeting Place
                                div(class="col-sm-9")
