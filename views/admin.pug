                                        span(id="db-pending-approval")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center")
                                        span(class="fa fa-indent")
                                    
                                        span  Stock Pending Payment
                                div(class="card-body cb-link" onclick="view_stock('Pending Payment','Paid')")
                                       
                                    div(class="div-hr")
                                       
                                        span(id="db-pending-payment")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                     p(align="center")
                                        span(class="fa fa-indent ")
                                        span  Stock Paid
                                div(class="card-body cb-link"  onclick="view_stock('Paid')")
                                       
                                    div(class="div-hr")
                                        span(id="db-paid")
                                        
                                        
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center")
                                        span(class="fa fa-outdent ")
                                        span  Orders Pending Delivery
                                div(class="card-body cb-link" onclick="view_orders('Awaiting Delivery','Out for Delivery')")
                                    
                                    div(style="text-align:center")
                                      
                                        span(id="db-orders-pending-delivery")
                        
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center")
                                        span(class="fa fa-outdent ")
                                        span  Orders out for Delivery
                                div(class="card-body cb-link" onclick="view_orders('Out for Delivery','Delivered')")
                                    p(align="center")
                                        span(id="db-orders-out-for-delivery")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center")
                                        span(class="fa fa-outdent ")
                                        span  Orders Delivered
                                div(class="card-body cb-link" onclick="view_orders('Delivered')")
                                    p(align="center")
                                        span(id="db-orders-delivered")

                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center") <i class="fa fa-steam-square"></i> Supplies for Approval
                                div(class="card-body cb-link" onclick="view_supply_orders('Pending Approval','Pending Delivery')")
                                    p(align='center' style="font-size:15px;")
                                        span(id="db-supply-orders-pending-approval")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center") <i class="fa fa-steam-square"></i> Supplies Pending Delivery

                                div(class="card-body cb-link" onclick="view_supply_orders('Pending Delivery','Out for Delivery')")
                                    p(align='center' style="font-size:15px;")
                                        span(id="db-supply-orders-pending-delivery")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center") <i class="fa fa-steam-square"></i> Supplies Out for Delivery
                                div(class="card-body cb-link" onclick="view_supply_orders('Out for Delivery','Delivered')")
                                    p(align='center' style="font-size:15px;")
                                        span(id="db-supply-orders-out-for-delivery")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    p(align="center") <i class="fa fa-steam-square"></i> Supplies Delivered
                                div(class="card-body cb-link" onclick="view_supply_orders('Delivered')")
                                    p(align='center' style="font-size:15px;")
                                        span(id="db-supply-orders-delivered")

        p
        div(class="cd hd" id="groups-div")
