            span &nbsp

            button(class="btn btn-primary dropdown-toggle a-group-filter" id="group-filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") <img src="/img/controls.png" style="width:16px;height:16px"></i> Filter
            div(class="dropdown-menu" aria-labelledby="group-filter")
                a(class="dropdown-item" href="#" onclick="filter_group_dl('district')") District
                a(class="dropdown-item" href="#"  onclick="filter_group_dl('no')") Group No.
                a(class="dropdown-item" href="#"  onclick="filter_group_dl('name')") Group Name
                a(class="dropdown-item" href="#"  onclick="filter_group_dl('clear')") Clear Filter

            div(class="modal fade" tabindex="-1" aria-labelledby="group-filter-div" aria-hidden="true" id="group-filter-div")
                div(class="modal-dialog")
                    div(class="modal-content")
                        div(class="modal-header")
                            h5(class="modal-title") Filter
                            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                span(aria-hidden="true") &times;
                        div(class="modal-body")
                            div(class="group-filter-cd" id="group-filter-by-district")
                                form
                                    div(class="form-group row")
                                
                                        div(class="col-sm-9")
                                            
                                            select(id="group-filter-district" class="form-control")
                                        div(class="col-sm-3")
                                            button(type="button" class="btn btn-primary form-control" onclick="filter_group()") Submit
                            div(class="group-filter-cd" id="group-filter-by-no")
                                form
                                    div(class="form-group row")
                                
                                        div(class="col-sm-9")
                                            
                                            input(id="group-filter-no" class="form-control" placeholder="Group No.")
                                        div(class="col-sm-3")
                                            button(type="button" class="btn btn-primary form-control" onclick="filter_group()") Submit
                            div(class="group-filter-cd" id="group-filter-by-name")
                                form
                                    div(class="form-group row")
                                
                                        div(class="col-sm-9")
                                            
                                            input(id="group-filter-name" class="form-control" placeholder="Group Name")
                                        div(class="col-sm-3")
                                            button(type="button" class="btn btn-primary form-control" onclick="filter_group()") Submit
            p
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white")
                 
                        span(class="fa fa-group")
                        span(id="groups-hdr")  Groups List
                div(class="card-body")
                    div(class="table-responsive")
                   
                        table(id="groups-table" class="table table-striped")
            p(class="alert alert-info" id="no-groups") No groups added
        div(class="cd hd" id="suppliers-div")
            button(class="btn btn-primary a-create-supplier") <i class='fa fa-plus'></i> New Supplier
            p
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white")
                 
                        span(class="fa fa-group")
                        span(id="groups-hdr")  Suppliers' List
                div(class="card-body")
                    div(class="table-responsive")
                        table(id="suppliers-table" class="table table-striped")
                    p(class="alert alert-info" id="no-suppliers") No suppliers added
        
        div(class="cd hd" id="orders-div")
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white")
                    h5
                        span(class="fa fa-filter")
                        span(id="curr-status")
                div(class="card-body")
                       
                    button(id="chx-status-btn" class="btn btn-primary" onclick="change_status()")
                    p
                    div(class="table-responsive")
                        table(id="orders-table" class="table table-striped")
                    p(class="alert alert-info hd" id="no-orders") No orders in selected category
        div(class="cd hd" id="supply-orders-div")
            div(class="card card-prmary")
                div(class="card-header bg-custom text-white")
                    h5
                        span(class="fa fa-filter")
                        span(id="supply-orders-curr-status")
                div(class="card-body")
                    div(class="dropdown")
                        button(class="btn btn-primary dropdown-toggle" type="button" id="change-supply-order-status-parent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Change Order Status
                        div(class="dropdown-menu" aria-labelledby="change-supply-order-status-parent")
                            button(class="dropdown-item change-supply-order-status"  onclick="change_supply_orders_status('Pending Delivery')") Pending Delivery
                            button(class="dropdown-item change-supply-order-status" onclick="change_supply_orders_status('Out for Delivery')") Mark as out for Delivery
                            button(class="dropdown-item change-supply-order-status" onclick="change_supply_orders_status('Delivered')") Mark as Delivered
                    p
                    div(class="table-responsive")
                        table(id="supply-orders-table" class="table table-striped")
                    p(class="alert alert-info hd" id="no-supply-orders") No supply orders in selected category
        div(class="modal fade" tabindex="-1" aria-labelledby="assign-supplier-div" aria-hidden="true" id="assign-supplier-div")
            div(class="modal-dialog" )
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title") Assign to Supplier
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div(class="modal-body")
                        form
                            div(class="form-group row")
                                
                            div(class="form-group row")
                                label(class="col-sm-4 col-form-label") Supplier ID
                                div(class="col-sm-8")
                                    select(class="form-control" id="supplier-id" placeholder="Supplier ID")
                            div(class="form-group row")
                                label(class="col-sm-4 col-form-label")
                                div(class="col-sm-8")
                                    button(type="button" class="btn btn-primary form-control" id="assign-supplier-btn") Assign & Mark as Out for Delivery

        
        div(class="cd hd" id="stock-div")
