                                div(class="card-body")
                                    div(class="div-hr")
                                        
                                        span(id="db-instock")
                        div(class="col mb-3")
                            div(class="card")
                                div(class="card-header bg-custom text-white")
                                    table(align="center")
                                        tr
                                            td
                                        
                                                span(class="fa fa-indent")
                                            td
                                                span Stock Pending Approval
                                div(class="card-body cb-link"  onclick="view_stock('Pending Approval','Pending Payment')")
