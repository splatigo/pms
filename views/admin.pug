                                        tr
                                            td
                                        
                                                span(class="fa fa-group")
                                            td
                                                span Counts

                                div(class="card-body get-groups cb-link")
                                    div(class="div-hr")
                                      
                                        span(id="db-group-count")

                                        hr
                                        span(id="db-members-count")
                                        hr
                                        
                                        span(id="db-suppliers-count")
                        
                                    
                        div(class="col mb-3")
